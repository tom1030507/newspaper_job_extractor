# Gemini API 密鑰
# 請到 https://aistudio.google.com/app/apikey 獲取您的 API 密鑰
GEMINI_API_KEY=your_api_key_here

# google apps scripts 網址 
# EX: https://script.google.com/macros/s/YOUR_SCRIPT_ID/exec
GOOGLE_APPS_SCRIPT_URL=your_script_url_here

# 伺服器配置
FLASK_HOST=0.0.0.0
FLASK_PORT=8080
FLASK_ENV=production

# 檔案處理
MAX_CONTENT_LENGTH=16777216
MAX_FILES_PER_UPLOAD=10

# 清理設定
CLEANUP_MAX_AGE_HOURS=4
CLEANUP_INTERVAL_HOURS=4
CLEANUP_MAX_FILE_COUNT=10